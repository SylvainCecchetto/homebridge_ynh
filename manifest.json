{
    "name": "Homebridge",
    "id": "homebridge",
    "packaging_format": 1,
    "description": {
        "en": "Homebridge is a lightweight NodeJS server that emulates the iOS HomeKit API.",
        "fr": "Homebridge est un serveur NodeJS Ã©mulant l'API HomeKit d'iOS"
    },
    "version": "0.4.50-4.6.2~ynh1",
    "url": "https://homebridge.io",
    "license": "free",
    "maintainer": {
        "name": "Sylvain Cecchetto",
        "email": "cecchetto.sylvain@me.com"
    },
    "requirements": {
        "yunohost": ">= 3.5"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Homebridge",
                    "fr": "Choisissez un nom de domaine pour Homebridge"
                },
                "example": "example.com"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}